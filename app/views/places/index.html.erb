<div class="row">
  <% @places.each do |place| %>
  <div class="col-sm-6 col-md-6 col-md-offset-3">
    <div class="thumbnail">
      <%= image_tag place.image.url(:medium), class: "img-circle" %>
    <div class="caption">
        <h3 class="place-name">
          <%= link_to place.name, place %>
        </h3>
        <p class="place-desc">
          <%= place.description %>
        </p>
    </div>
   </div>
  </div>
  <% end %>
  </div>
